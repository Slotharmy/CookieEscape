{
  "name": "No more Cockies",
  "description": "Get rid of nasty cookies!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
      "service_worker": "background.js"
  },
  "permissions": ["cookies", "tabs", "scripting", "storage"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "/images/16.png",
          "32": "/images/32.png",
          "48": "/images/48.png",
          "128": "/images/128.png"
        }
      },
      "icons": {
        "16": "/images/16.png",
          "32": "/images/32.png",
          "48": "/images/48.png",
          "128": "/images/128.png"
      }
}
